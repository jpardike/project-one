
<script defer src="/scripts/searchBar.js"></script>

<nav class="navbar navbar-expand-md navbar-light bg-light">
  <a id="nav-text" class="navbar-brand" href="/">Tianguis</a>
  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarNav"
    aria-controls="navbarNav"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a id="nav-text" class="nav-link" href="/products">View Listings</a>
      </li>
      <li class="nav-item">
        <a id="nav-text" class="nav-link" href="/users">Sellers</a>
      </li>
      <li class="nav-item">
        <i class="fas fa-search mr-1"></i>
        <input
          id="input-bar"
          onkeyup="searchBar()"
          type="text"
          name="search"
          placeholder="search for products"
        />
        <ul class="search-items">
          <% for(let i = 0; i < products.length; i++) { %>
          <li class="search">
            <a class="search-link" href="/products/<%= products[i].id %>"
              ><%= products[i].type %></a
            >
          </li>
          <% } %>
        </ul>
      </li>
    </ul>
  </div>
</nav>
