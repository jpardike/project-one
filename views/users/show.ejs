<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/head-contents') %>
    <!-- u-show CSS -->
    <link rel="stylesheet" href="/styles/u-show.css" />
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <main>
      <div class="row p-0 m-0 justify-content-center">
        <h1 class="text-center show-user-h1">
          <%= user.name %>'s Profile Info
        </h1>
      </div>

      <div class="row p-0 m-0">
        <div class="col">
          <!-- Google Maps -->
          <iframe
            class="show-map"
            frameborder="0"
            style="border: 0"
            src="https://www.google.com/maps/embed/v1/place?key=<%= api %>&q=<%= user.location %>"
            allowfullscreen
          >
          </iframe>

          <p>Name: <%= user.name %></p>
          <p>Username: <%= user.userName %></p>
          <p>Password: <%= user.password %></p>
          <p>Location: <%= user.location %></p>

          <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
            <input class="btn" type="submit" value="Delete" />
          </form>
          <form action="/users/<%= user.id %>/edit" method="GET">
            <input class="btn" type="submit" value="Update" />
          </form>
        </div>

        <div class="col">
          <h3>Current Listings</h3>

          <ul>
            <% for (let i = 0; i < user.products.length; i++) { %>
            <li>
              <a href="/products/<%= user.products[i].id %>"
                ><%= user.products[i].type %>
              </a>
            </li>
            <% } %>
          </ul>

          <button class="btn">
            <a href="/products/new">Create New Listing</a>
          </button>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
